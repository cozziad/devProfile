<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="160dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="DevSlopes"
            android:layout_width="157dp"
            android:layout_height="40dp"
            android:id="@+id/textView" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginStart="32dp"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton" android:id="@+id/imageView15"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView17" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView17"
            app:layout_constraintStart_toEndOf="@+id/imageView15" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView20" app:layout_constraintTop_toTopOf="@+id/imageView15"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView20"
            app:layout_constraintStart_toEndOf="@+id/imageView17" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintTop_toTopOf="@+id/imageView17"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17"/>
    <Button
            android:text="Customize Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_gradient"
            android:id="@+id/button2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#FFFFFF"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView21"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:scaleType="centerCrop"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView22" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView21" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintDimensionRatio="16:9" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView23"
            app:layout_constraintTop_toTopOf="@+id/imageView21" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="16dp" app:layout_constraintDimensionRatio="16:9"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView25" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView23"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView23"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9" android:scaleType="centerCrop"/>
</android.support.constraint.ConstraintLayout>